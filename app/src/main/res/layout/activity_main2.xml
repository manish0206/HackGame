<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dc475d">
    <TextView
        android:id="@+id/image4"
        android:layout_width="413dp"
        android:layout_height="71dp"
        android:background="#000000"
        android:fontFamily="@font/appleberry_with_cyrillic"
        android:gravity="center_horizontal"
        android:text="Select a game mode"
        android:textColor="#ffffff"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="414dp"
        android:layout_height="246dp"
        android:src="@drawable/love"
        app:layout_constraintTop_toBottomOf="@id/image4"
        tools:layout_editor_absoluteX="-2dp" />

    <TextView
        android:id="@+id/image6"
        android:layout_width="119dp"
        android:layout_height="55dp"
        android:fontFamily="@font/appleberry_with_cyrillic"
        android:text="LOVE"
        android:textColor="#ffffff"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image5" />

    <ImageView
        android:id="@+id/image7"
        android:layout_width="414dp"
        android:layout_height="242dp"
        android:src="@drawable/stress"
        app:layout_constraintTop_toBottomOf="@+id/image6"
        tools:layout_editor_absoluteX="-4dp" />
    <TextView
        android:id="@+id/image8"
        android:layout_width="119dp"
        android:layout_height="55dp"
        android:fontFamily="@font/appleberry_with_cyrillic"
        android:text="HATE"
        android:textColor="#ffffff"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image7" />




</androidx.constraintlayout.widget.ConstraintLayout>